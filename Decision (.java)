import java.awt.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.io.*;
import java.util.*;
import javax.swing.*;
import javax.swing.border.Border;

public class Decision {
	
    public LinkedList<Offensive_Player> getOffList()throws IOException {
        return new FootballTeam("A").initOFFPlayersassigner();
    }
    
    public LinkedList<Defensive_Player> getDefList() throws IOException{
    	return new FootballTeam("B").initDEFPlayersassigner();
    }
    
    public LinkedList<SpecialTeams_Player> getSpecList() throws IOException{
    	return new FootballTeam("C").initSPECPlayersassigner();
    }

        public static void main(String[] args) throws IOException {
	        JFrame Frame = new JFrame("Seattle Seahawks: Player Information");
	        Frame.setContentPane(new Decision_Panel());
	        Frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
	        Frame.setPreferredSize(new Dimension(640, 512));
	        Frame.pack();
	        Frame.setVisible(true);
	        Frame.setResizable(false);
    }
}

@SuppressWarnings("serial")
class Decision_Panel extends JPanel{
	JButton btno, btnd, btns, reset;
    JLabel jlbl, jlbl2;
    JLabel background = new JLabel(new ImageIcon("./src/seattle_seahawks_bg12x10.jpg"));

    public Decision_Panel() {
        setLayout(new BorderLayout());
        setBackground(new Color(0, 0, 0, 0));
        setSize(640, 512);
        
        JPanel btmTOPPanel = new JPanel(new GridLayout(3, 1));
        JPanel btmBTMPanel = new JPanel(new GridLayout(2, 3, 20, 20));
        btmTOPPanel.setBackground(new Color(0, 0, 0, 0));
        btmBTMPanel.setBackground(new Color(0, 0, 0, 0));

        JPanel btmPanel = new JPanel();
        btmPanel.setBackground(new Color(0, 0, 0, 0));
        btmPanel.setLayout(new BorderLayout());

        JPanel topPanel = new JPanel();
        topPanel.setBackground(new Color(0, 0, 0, 0));

        btno = new JButton("Offense");
        btnd = new JButton("Defense");
        btns = new JButton("Special");
        reset = new JButton("Reset");
        
        Font myFont = new Font("Times", Font.BOLD, 18);

        jlbl = new JLabel("Welcome to the Seattle Seahawks Player Information Portal.");
        jlbl.setHorizontalAlignment(SwingConstants.CENTER);
        jlbl.setFont(myFont);
        jlbl.setForeground(Color.cyan);
        
        jlbl2 = new JLabel("Please choose a player group to view from the options below:");
        jlbl2.setHorizontalAlignment(SwingConstants.CENTER);
        jlbl2.setFont(myFont);
        jlbl2.setForeground(Color.cyan);

        buttonlistener listen = new buttonlistener();
        btno.addActionListener(listen);
        btnd.addActionListener(listen);
        btns.addActionListener(listen);
        reset.addActionListener(listen);
        
        Border newBorder = BorderFactory.createLineBorder(new Color(0, 0, 0, 0), 15);
        
        background.setLayout(new BorderLayout());
    	background.setVisible(true);
    	background.setSize(640, 512);
    	background.setBorder(newBorder);
        
        add(background);
        
        background.add(topPanel, BorderLayout.NORTH);
        background.add(btmPanel, BorderLayout.SOUTH);
        btmPanel.add(btmTOPPanel, BorderLayout.NORTH);
        btmPanel.add(btmBTMPanel, BorderLayout.SOUTH);
        
        btmTOPPanel.add(new JLabel(" "));
        btmTOPPanel.add(jlbl);
        btmTOPPanel.add(jlbl2);

        btmBTMPanel.add(btno);
        btmBTMPanel.add(btnd);
        btmBTMPanel.add(btns);
        btmBTMPanel.add(new JLabel(" "));
        btmBTMPanel.add(reset);
        btmBTMPanel.add(new JLabel(" "));
    }
    
    public class buttonlistener implements ActionListener {
        public void actionPerformed(ActionEvent event) {
            Object source = event.getSource();

            try {
                if (source == btno) {
                    Offense.main(null);
                	Defense.dFrame.dispose();
                	Specials.sFrame.dispose();
                }
                if (source == btnd) {
                    Defense.main(null);
	                Offense.oFrame.dispose();
	            	Specials.sFrame.dispose();
                }
                if (source == btns) {
                    Specials.main(null);
	                Offense.oFrame.dispose();
	            	Defense.dFrame.dispose();
                }
                if (source == reset) {
                	Offense.oFrame.dispose();
                	Defense.dFrame.dispose();
                	Specials.sFrame.dispose();
                }
            } catch (IOException e) { e.printStackTrace(); }
        }
    }
}
