import javax.swing.*;
import java.awt.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.awt.event.WindowEvent;
import java.io.IOException;
import java.util.LinkedList;

public class Defense {

    static JFrame dFrame = new JFrame("Defensive Players");

    public static void main(String[] args) throws IOException {
        dFrame.setContentPane(new Defensive_Panel());
        dFrame.setDefaultCloseOperation(JFrame.HIDE_ON_CLOSE);
        dFrame.setPreferredSize(new Dimension(500, 250));
        dFrame.pack();
        dFrame.setResizable(true);
        dFrame.setVisible(true);
    }
}

class Defensive_Panel extends JPanel {
    private JPanel defenseWin;
    private JButton confirm;
    private JTextArea output;
    private JComboBox<String> choosePlayers;
    ImageIcon image = new ImageIcon("./src/PlayerPhotos/Malik Turner.png");
    JLabel label = new JLabel("", image, JLabel.CENTER);
    JPanel panel = new JPanel(new BorderLayout());

    Decision a = new Decision();
    LinkedList<Player> defTeam = a.getList('2');

    public Defensive_Panel() {
//        setSize(400, 250);
//        setLayout(new BorderLayout());
        int i = 0;

        String[] name = new String[defTeam.size()];
        for (Player k : defTeam) {
            name[i] = k.firstName() + " " + k.lastName();
            i++;
        }
        choosePlayers = new JComboBox<>(name);
        confirm = new JButton("Confirm");
        output = new JTextArea(" ");


        buttonlistener listen = new buttonlistener();
        confirm.addActionListener(listen);

        add(choosePlayers);
        add(confirm);
        add(output);
        panel.add(label, BorderLayout.CENTER);
        add(label);
    }

    public class buttonlistener implements ActionListener {
        public void actionPerformed(ActionEvent event) {
            Object source = event.getSource();

            if (source == confirm) {
                for (Player k : defTeam) {
                    if ((k.firstName() + " " + k.lastName()).equals(choosePlayers.getSelectedItem())) {
                        output.setText(k.toString());
                        image = new ImageIcon("./src/PlayerPhotos/" + k.firstName() + " " + k.lastName() + ".png");
                        label.setIcon(image);
                    }
                }
            }


        }
    }
}
