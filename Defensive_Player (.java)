public class Defensive_Player extends Player{
	private String name, team, college, position, role;
    protected int  age, jersey, ydsRush, ydsRec, ydsPass, touchdowns, tackles, interceptions, returnYds;
    private double weight, height;

	public Defensive_Player(String nick, String group, String uni, int old, double mass, double tall, String pos,
            String part, int playNo, int Tackles, int picks) {
		super(nick, group, uni, old, mass, tall, pos, part, playNo);
		
		name = nick;
        team = group;
        college = uni;
        age = old;
        weight = mass;
        height = tall;
        position = pos;
        role = part;
        jersey = playNo;
        tackles = Tackles;
        interceptions = picks;
	}
	
	public int getRecordedTackles() {
		return tackles;
	}
	
	public int getInterceptions() {
		return interceptions;
	}
	
	public String to_String() {
        String description = "";
        description += "Name: " + name + "\n";
        description += "Age: " + age + "\n";
        description += "Team: " + team + "\n";
        description += "College: " + college + "\n";
        description += "Weight " + weight + "\n";
        description += "Height: " + height + "\n";
        description += "Position: " + position + "\n";
        description += "Role: " + role + "\n";
        description += "Player No. : " + jersey + "\n";
        description += "Tackles: " + tackles + "\n";
		description += "Interceptions: " + interceptions;

        return description;
    }
}
