import javax.swing.*;
import javax.swing.border.Border;
import java.awt.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.io.IOException;
import java.util.LinkedList;

public class Specials {

    static JFrame sFrame = new JFrame("Special Teams Players");

    public static void main(String[] args) throws IOException {
    	sFrame.setContentPane(new Specials_Panel());
        sFrame.setDefaultCloseOperation(JFrame.DISPOSE_ON_CLOSE);
        sFrame.setPreferredSize(new Dimension(640, 512));
        sFrame.pack();
        sFrame.setResizable(false);
        sFrame.setVisible(true);
    }
}

@SuppressWarnings("serial")
class Specials_Panel extends JPanel{
    private JButton clear;
    private JComboBox<String> choosePlayers;
    ImageIcon image = new ImageIcon("./src/PlayerPhotos/Malik Turner.png");
    JPanel N = new JPanel(new GridLayout(3, 3));
    JPanel S = new JPanel(new BorderLayout());
    JPanel S1 = new JPanel(new GridLayout(1, 2, 25, 25)); 
    JTextArea SE;
    JLabel SW = new JLabel("", image, JLabel.CENTER);
    JLabel background = new JLabel(new ImageIcon("./src/seahawks2.jpg"));
    Decision a = new Decision();
    LinkedList<SpecialTeams_Player> specTeam = a.getSpecList();
    Font myFont = new Font("Times", Font.BOLD, 16);
    Font myFont2 = new Font("Times", Font.BOLD, 22);
    JLabel specials = new JLabel("SPECIAL TEAMS", JLabel.CENTER);

    public Specials_Panel() throws IOException{
    	Border newBorder = BorderFactory.createLineBorder(new Color(0, 0, 0, 0), 35);
    	setLayout(new BorderLayout());
    	setVisible(true);
        int i = 0;

        String[] name = new String[specTeam.size()];
        
        for (SpecialTeams_Player k : specTeam) {
            name[i] = k.firstName() + " " + k.lastName();
            i++;
        }
        
        choosePlayers = new JComboBox<>(name);
        choosePlayers.setSelectedItem(null);
        choosePlayers.setFont(myFont);
        clear = new JButton("Clear");
        SE = new JTextArea(" ");
        SE.setVisible(false);
        SW.setVisible(false);
        
        clear.setFont(myFont);
        clear.setEnabled(false);

        buttonlistener listen = new buttonlistener();
        clear.addActionListener(listen);
        choosePlayers.addActionListener(listen);
        
        N.setBackground(new Color(0, 0, 0, 0));
        S.setBackground(new Color(0, 0, 0, 0));
        S1.setBackground(new Color(0, 0, 0, 0));
        SE.setBackground(new Color(0, 76, 153));
        
        SE.setFont(myFont);
        SE.setForeground(Color.black);
        
        background.setLayout(new BorderLayout());
    	background.setVisible(true);
    	background.setSize(640, 512);
    	background.setBorder(newBorder);
    	
    	specials.setFont(myFont2);
    	specials.setForeground(Color.cyan);

    	N.add(new JLabel());
    	N.add(specials);
    	N.add(new JLabel());
        N.add(choosePlayers);
        N.add(new JLabel());
        N.add(clear);
        N.add(new JLabel());
        N.add(new JLabel());
        N.add(new JLabel());
        
        S1.add(SW, BorderLayout.WEST);
        S1.add(SE, BorderLayout.EAST);
        
        S.add(S1, BorderLayout.CENTER);
        
        background.add(N, BorderLayout.NORTH);
        background.add(S, BorderLayout.SOUTH);
        
        add(background);
    }
    
    public class buttonlistener implements ActionListener {
        public void actionPerformed(ActionEvent event) {
            Object source = event.getSource();
            if (source == choosePlayers) {

                for (SpecialTeams_Player k : specTeam) {
                    if ((k.firstName() + " " + k.lastName()).equals(choosePlayers.getSelectedItem())) {
                        SE.setText(k.to_String());
                        image = new ImageIcon("./src/PlayerPhotos/" + k.firstName() + " " + k.lastName() + ".png");
                        SW.setIcon(image);
                        clear.setEnabled(true);
                        SE.setVisible(true);
                        SW.setVisible(true);
                    }
                }
            }
            else if(source == clear) {
            	image = new ImageIcon("./src/PlayerPhotos/Malik Turner.png");
            	SE.setText(" ");
            	SW.setIcon(image);
            	SE.setVisible(false);
            	clear.setEnabled(false);
            	SW.setVisible(false);
            	choosePlayers.setSelectedItem(null);
            }
        }
    }
}
